            </MenuItem>
        </Menu>
        <Button Height="47" HorizontalAlignment="Left" Margin="12,28,0,0" Name="button1" VerticalAlignment="Top" Width="55" Foreground="{x:Null}" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/ProjetoEscola;component/Images/146.ico" />
            </Button.Background>
        </Button>
        <Label Content="Funcionario" Height="28" HorizontalAlignment="Left" Margin="3,68,0,0" Name="label1" VerticalAlignment="Top" />
        <Button Height="47" HorizontalAlignment="Left" Margin="83,26,0,0" Name="button2" VerticalAlignment="Top" Width="59" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/ProjetoEscola;component/Images/15.ico" />
            </Button.Background>
        </Button>
    </Grid>
