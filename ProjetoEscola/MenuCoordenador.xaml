            <ImageBrush ImageSource="/ProjetoEscola;component/Images/2.png" />
        </Grid.Background>
        <Menu Height="19" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="624" Background="{StaticResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
